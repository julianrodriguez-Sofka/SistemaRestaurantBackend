{
  "name": "e2e-tests",
  "version": "1.0.0",
  "description": "Tests E2E para Sistema de Pedidos con captura de evidencias",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:auth": "playwright test tests/auth.spec.ts",
    "test:users": "playwright test tests/users.spec.ts",
    "test:products": "playwright test tests/products.spec.ts",
    "report": "playwright show-report ../test-results/html-report",
    "install-browsers": "playwright install"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.2"
  }
}
