# ========================================
# Server Configuration
# ========================================
PORT=3002

# ========================================
# WebSocket Configuration
# ========================================
# Puerto para WebSocket Server (usado por la cocina en tiempo real)
# IMPORTANTE: Este puerto debe ser accesible desde el frontend
# Frontend se conecta a: ws://localhost:4000 (desarrollo)
WS_PORT=4000

# ========================================
# MongoDB Configuration
# ========================================
MONGO_URI=mongodb://mongo:27017/restaurant_orders
MONGO_DB=restaurant_orders

# ========================================
# RabbitMQ Configuration (Local)
# ========================================
AMQP_CONNECTION_TYPE=local
AMQP_LOCAL_PROTOCOL=amqp
AMQP_LOCAL_HOST=rabbitmq
AMQP_LOCAL_PORT=5672
AMQP_LOCAL_USER=guest
AMQP_LOCAL_PASS=guest

# ========================================
# Environment
# ========================================
NODE_ENV=production
